<launch>
  <include file="$(find hrpsys_ros_bridge)/launch/hrpsys_ros_bridge.launch">
    <arg name="ROBOT_NAME" value="HRP1" />
    <arg name="MODEL_FILE" value="$(find openhrp3)/share/OpenHRP-3.1/sample/model/PA10/pa10.main.wrl" />
    <arg name="COLLADA_FILE" value="$(find hrpsys_ros_bridge)/models/PA10.dae" />
  </include>

  <node name="pa10_rviz" pkg="rviz" type="rviz" respawn="true"
	args="--sync -d $(find hrpsys_ros_bridge)/launch/pa10.vcg"
        launch-prefix='glc-capture --out=$(find hrpsys_ros_bridge)/build/images/pa10_rviz.glc'  />
</launch>


