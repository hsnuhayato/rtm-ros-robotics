all: installed.c++

INSTALL_DIR = `rospack find openrtm`
FILENAME    = OpenRTM-aist-1.1.0-RC3.tar.gz
TARBALL     = build/$(FILENAME)
TARBALL_URL = http://www.openrtm.org/pub/OpenRTM-aist/cxx/1.1.0/$(FILENAME)
SOURCE_DIR  = build/OpenRTM-aist-1.1.0
TARBALL_PATCH = SDOPackage.idl-1.1.0.patch Manager.cpp.patch2 build/openrtm-bin-1.1.0.patch
UNPACK_CMD  = tar xzf
MD5SUM_FILE = $(FILENAME).md5sum
include $(shell rospack find mk)/download_unpack_build.mk

build/openrtm-bin-1.1.0.patch: openrtm-bin.patch-1.1.0.in
installed.c++: $(SOURCE_DIR)/unpacked
	cd $(SOURCE_DIR) && ./configure --enable-debug --prefix=$(CURDIR) && make && make install
	touch installed.c++

clean:
	-cd $(SOURCE_DIR) && make clean

wipe: clean
	rm -fr installed.c++
