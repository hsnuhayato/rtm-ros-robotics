<launch>
  <!--- Run AMCL -->
  <include file="$(find beego_navigation)/beego_amcl_omni.xml" />
  <!-- Run move_base -->
  <node pkg="move_base" type="move_base" respawn="false"
	name="move_base" output="screen">
    <rosparam file="$(find beego_navigation)/yaml/costmap_common_params_hokuyo.yaml"
	      command="load" ns="global_costmap" />
    <rosparam file="$(find beego_navigation)/yaml/costmap_common_params_hokuyo.yaml"
	      command="load" ns="local_costmap" />
    <rosparam file="$(find beego_navigation)/yaml/local_costmap_params.yaml"
	      command="load" />
    <rosparam file="$(find beego_navigation)/yaml/global_costmap_params.yaml"
	      command="load" />
    <rosparam file="$(find beego_navigation)/yaml/base_local_planner_params.yaml" command="load" />
  </node>
</launch>
