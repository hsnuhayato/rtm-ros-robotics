all: installed.rtctree

INSTALL_DIR = `rospack find openrtm`
GIT_DIR     = build/rtctree
GIT_URL     = https://github.com/gbiggs/rtctree.git
GIT_PATCH   = 
PYTHONDIR   = `python -c 'import sys; print "python%s"%sys.version[:3]'`
include $(shell rospack find mk)/git_checkout.mk

installed.rtctree: wiped.rtctree $(GIT_DIR)
	cd $(GIT_DIR) && echo "y" | python ./setup.py build && echo "y" | python ./setup.py install --prefix=$(INSTALL_DIR)
	touch installed.rtctree

clean:
	-cd $(GIT_DIR) && make clean

wipe: clean
	rm -fr installed.rtctree
	rm -fr $(GIT_DIR)
	rm -fr lib/$(PYTHONDIR)/site-packages/rtctree
	rm -fr lib/$(PYTHONDIR)/site-packages/rtctree-3.0.0-py2.6.egg-info

wiped.rtctree:  Makefile.openrtm-rtctree-1.1.0
	make -f Makefile.openrtm-rtctree-1.1.0 wipe
	touch wiped.rtctree
