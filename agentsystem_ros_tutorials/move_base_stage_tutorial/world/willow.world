define topurg laser
(
  range_min 0.0
  range_max 30.0
  fov 270.25
  samples 1081
  # generic model properties
  color "black"
  size [ 0.05 0.05 0.1 ]
)

define pr2 position
(
  size [0.64 0.64 0.25]
  origin [0.0 0 0 0]
  gui_nose 1
  drive "omni"
  topurg(pose [ 0.275 0.000 0 0.000 ])
)

define floorplan model
(
  # sombre, sensible, artistic
  color "gray30"

  # most maps will need a bounding box
  boundary 1

  gui_nose 0
  gui_grid 0
  gui_move 0
  gui_outline 0
  gripper_return 0
  fiducial_return 0
  laser_return 1
)

# set the resolution of the underlying raytrace model in meters
resolution 0.02

interval_sim 100  # simulation timestep in milliseconds

window
( 
  size [ 800 800 ] 
  center [20 20] 
  scale 20
  rotate [ 0 0 ]

  show_data 1
  pcam_on 1
  pcam_loc [20 15 2]
)

# load an environment bitmap
floorplan
( 
  name "willow"
  bitmap "willow-full.pgm"
  size [108 117.4 0.5]
  pose [54 58.7 0 0]
)

# throw in a robot
pr2
(
  name "pr2"
  pose [21 19 0 0]

  drive "omni"
  color "blue"
)


