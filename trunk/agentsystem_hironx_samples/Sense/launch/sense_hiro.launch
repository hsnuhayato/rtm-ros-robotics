<!-- -*- mode: XML -*- -->

<launch>

  <group ns="hiro">

    <param name="rtm_nameserver" type="string" value="hiro014"/>

    <group ns="leye">

      <node pkg="HiroCapture" type="hiro_capture_rtc" name="leye_cap"
    	    args="-f $(find HiroCapture)/conf/rtc_leye.conf">
      </node>

      <!-- Capture parameters -->
      <param name="camera_type" type="string" value="ueye"/>
      <param name="devId" type="int" value="0"/>
      <param name="video_mode" type="string" value="1024x768"/>
      <param name="frame_rate" type="double" value="15"/>

      <!-- Camera parameters -->
      <param name="frame_id" type="string" value="leye"/>
      <param name="camera_info_url" type="string"
    	     value="file://$(find HiroCapture)/conf/hiro_leye.yaml"/>

      <!-- Undistortion, rectification and so on -->
      <!-- <node pkg="image_proc" type="image_proc" name="image_proc"> -->
      <!-- </node> -->

      <node pkg="image_view" type="image_view" name="leye_view">
	<remap from="image" to="image_raw"/>
	<param name="autosize" value="false"/>
      </node>

      <!-- Pose recognition -->
      <node pkg="checkerboard_detection" type="checkerboard_pose" name="checkerboard_pose">
	<param name="base_frame" type="string"  value="base_link" />
	<param name="frame_id" type="string" value="checkerboard"/>
	<param name="marker_ns" type="string" value="checkerboard"/>
	<param name="pose_file" value="$(find checkerboard_detection)/cfg/pose.yml" />
	<param name="read_pose_file" type="bool" value="false"/>
	<param name="service_name" type="string" value="pose" />
	<param name="draw_debug_image" type="bool" value="true"/>
	<param name="publish_tf_link" type="bool" value="true"/>
	<param name="publish_rviz_marker" type="bool" value="true"/>
	<param name="publish_last_success" type="bool" value="false"/>
	<param name="publish_camera_pose" type="bool" value="false"/>
	<param name="use_sub_pixel" type="bool" value="true"/>
	<param name="checkerboard_width" type="int" value="4"/>
	<param name="checkerboard_height" type="int" value="3"/>
	<param name="checkerboard_box_width" type="double" value="-0.010"/>
	<param name="checkerboard_box_height" type="double" value="0.010"/>
	<param name="frame_rate" value="10" />
	<param name="skip_frames" value="1" />
	<remap from="image" to="image_raw" />
	<remap from="camera_info" to="camera_info" />
      </node>

    </group>

    <!-- <group ns="reye"> -->

      <!-- <node pkg="HiroCapture" type="hiro_capture_rtc" name="reye_cap" -->
      <!-- 	    args="-f $(find HiroCapture)/conf/rtc_reye.conf"> -->
      <!-- </node> -->

      <!-- Capture parameters -->
      <!-- <param name="camera_type" type="string" value="ueye"/> -->
      <!-- <param name="devId" type="int" value="1"/> -->
      <!-- <param name="video_mode" type="string" value="1024x768"/> -->
      <!-- <param name="frame_rate" type="double" value="15"/> -->

      <!-- Camera parameters -->
      <!-- <param name="frame_id" type="string" value="reye"/> -->
      <!-- <param name="camera_info_url" type="string" -->
      <!-- 	     value="file://$(find HiroCapture)/conf/hiro_reye.yaml"/> -->
      <!-- Undistortion, rectification and so on -->
      <!-- <node pkg="image_proc" type="image_proc" name="image_proc"> -->
      <!-- </node> -->

      <!-- <node pkg="image_view" type="image_view" name="reye_view_rect"> -->
      <!-- 	<remap from="image" to="image_rect_color"/> -->
      <!-- 	<param name="autosize" value="false"/> -->
      <!-- </node> -->

    <!-- </group> -->

    <group ns="rhand">

      <node pkg="HiroCapture" type="hiro_capture_rtc" name="rhand_cap"
      	    args="-f $(find HiroCapture)/conf/rtc_rhand.conf">
      </node>
      <param name="camera_type" type="string" value="uvc"/>
      <param name="devId" type="int" value="1"/>
      <param name="video_mode" type="string" value="640x480"/>
      <param name="frame_rate" type="double" value="15"/>

      <param name="frame_id" type="string" value="rhand"/>
      <param name="camera_info_url" type="string"
    	     value="file://$(find HiroCapture)/conf/hiro_rhand.yaml"/>

      <node pkg="image_view" type="image_view" name="rhand_view">
    	<remap from="image" to="image_raw"/>
    	<param name="autosize" value="false"/>
      </node>

    </group>

    <include file="$(find SequencePlayerService)/launch/seq_service.launch"/>

  </group>

</launch>
