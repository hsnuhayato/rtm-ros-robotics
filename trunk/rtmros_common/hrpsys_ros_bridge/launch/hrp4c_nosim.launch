<launch>
  <include file="$(find hrpsys_ros_bridge)/launch/hrp4c_startup_nosim.launch" />
  <include file="$(find hrpsys_ros_bridge)/launch/hrp4c_ros_bridge.launch" />

  <sphinxdoc><![CDATA[

This script is "no-sim" version of `hrp4.launch`, launch `hrp4c_startup_nosim.launch` instead of `hrp4c_startup.launch` to run OpenHRP3 simulator without forward dynamics calculation.

.. image:: build/images/HRP4C_NoSimPickUp.gif
  :width: 600

.. image:: build/images/hrp4c_nosim.gif
  :width: 600

  ]]></sphinxdoc>
  <test type="test-grxui.py" pkg="openhrp3" time-limit="300"
   test-name="HRP4C_NoSimPickUp"
   args="--max-time=10
	 --target-directory=$(find hrpsys_ros_bridge)/build/images
	 --check-tf='/BODY /R_HAND_J1_LINK'
	 --script='rosrun roseus roseus $(find hrpsys_ros_bridge)/scripts/hrp4c-pickup.l __log:=dummy'" /> <!-- add dummy __log/= argument to invoke roseus with non-interactive mode -->
  <test type="ogv_encode.sh" pkg="jsk_tools" test-name="z_HRP4C_NoSimPickUp" args="$(find hrpsys_ros_bridge)/build/images/HRP4C_NoSimPickUp.ogv" time-limit="1000"/>
  <test type="glc_encode.sh" pkg="jsk_tools" test-name="z_hrp4c_nosim_rviz" args="$(find hrpsys_ros_bridge)/build/images/hrp4c_rviz.glc --ctx 1 -o $(find hrpsys_ros_bridge)/build/images/hrp4c_nosim_rviz" time-limit="2000"/>
</launch>


